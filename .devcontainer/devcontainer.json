{
  "name": "DevPod DevOps (Neovim Btw)",
  "image": "ubuntu:24.04",
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/ansible:2": {},
    "hcr.io/devcontainers-extra/features/fzf:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "recol",
      "userUid": "1500",
      "userGid": "1500"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/duduribeiro/devcontainer-features/neovim:1": {},
    "ghcr.io/kreemer/features/stow:1": {}
  },
  "postCreateCommand": [
    "zsh", "-c",
    "echo 'Setting up DevOps environment with Neovim and dotfiles...' && sudo apt-get update && sudo apt-get install -y ripgrep fd-find tree tmux && echo 'Cloning dotfiles...' && git clone https://github.com/ReCoL1337/.dotfiles.git ~/.dotfiles && git clone https://github.com/ReCoL1337/nvim.git ~/.dotfiles/config/nvim && curl -s https://ohmyposh.dev/install.sh | bash -s"
  ],
  "remoteUser": "recol",
  "containerEnv": {
    "SHELL": "/bin/zsh",
    "TERM": "xterm-256color",
    "EDITOR": "nvim",
    "VISUAL": "nvim"
  }
}
